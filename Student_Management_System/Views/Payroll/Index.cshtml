@model IEnumerable<Student_Management_System.Models.Payroll>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PayDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BasicSalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bonus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Deductions)
            </th>
            <th>Teacher Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PayDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BasicSalary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bonus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Deductions)
            </td>
                <td>@item.Teacher?.TeacherName</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Pay_Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Pay_Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Pay_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
