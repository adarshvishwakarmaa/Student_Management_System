@model IEnumerable<Student_Management_System.Models.Attendence>

@{
    ViewData["Title"] = "Index";
}


<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>Student Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
                <td>@item.Student?.StudentName</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Attend_Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Attend_Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Attend_Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
